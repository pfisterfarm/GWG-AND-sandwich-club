<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="@dimen/detail_text_paddingBottom"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_heading_paddingLeft"
                android:text="@string/detail_also_known_as_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/also_known_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_text_paddingLeft"
                android:paddingRight="@dimen/detail_text_paddingRight"
                android:paddingBottom="@dimen/detail_text_paddingBottom"
                tools:text="A Hammer Sandwich"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_heading_paddingLeft"
                android:text="@string/detail_ingredients_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ingredients_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_text_paddingLeft"
                android:paddingRight="@dimen/detail_text_paddingRight"
                android:paddingBottom="@dimen/detail_text_paddingBottom"
                tools:text="Bread, Ham, More Bread, lambs, sloths, fruit bats, breakfast cereals"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_heading_paddingLeft"
                android:text="@string/detail_place_of_origin_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/origin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_text_paddingLeft"
                android:paddingRight="@dimen/detail_text_paddingRight"
                android:paddingBottom="@dimen/detail_text_paddingBottom"
                tools:text="United States"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_heading_paddingLeft"
                android:text="@string/detail_description_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_text_paddingLeft"
                android:paddingRight="@dimen/detail_text_paddingRight"
                android:paddingBottom="@dimen/detail_text_paddingBottom"
                tools:text="Basically, just a slice of ham between two pieces of untoasted bread. Bit boring, really."/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
